@model agenda.Models.broker
@{
    ViewBag.Title = "Enregistrement utilisateur";
}

<h2>Formulaire nouveaux collaborateurs</h2>

@using (Html.BeginForm("GoBroker", "Broker", FormMethod.Post))
{
        @Html.AntiForgeryToken()

        <div class="form-row">
            <div class="col-md-4 mb-3">
                @Html.LabelFor(model => model.firstname)
                @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 mb-3">
                @Html.LabelFor(model => model.lastname)
                @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control inputAddBroker", @id = "lastNameBroker", @placeholder = "Nom" } })
                @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(model => model.mail)
                @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control inputAddBroker", @id = "mailBroker", @placeholder = "Mail" } })
                @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3 mb-3">
                @Html.LabelFor(model => model.phoneNumber)
                @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control inputAddBroker", @id = "phoneNumberBroker", @placeholder = "Telephone" } })
                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <button class="btn btn-primary" type="submit" value="submit">Valider</button>
        <div>
            @ViewBag.MessageSuccess
        </div>
}

<div>
    @Html.ActionLink("retour index", "index")
</div>
