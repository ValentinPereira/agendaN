<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Agenda de rendez-vous</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            @Html.ActionLink("Agenda", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <img class="rounded" id="logo" title="Logo" alt="Logo agenda" src="~/image/agenda.png" />
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse rounded text-center" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Ajouter courtier", "GoBroker", "Broker", new { area = "" }, new { @class = "nav-link bg-info rounded text-white", @id = "btnBrokers" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ajouter client", "GoCustomer", "Customer", new { area = "" }, new { @class = "nav-link bg-info rounded text-white", @id = "btnCustomers" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ajouter rendez-vous", "GoAppointment", "appointment", new { area = "" }, new { @class = "nav-link bg-info rounded text-white", @id = "btnApointment" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Liste des courtiers", "ListBrokers", "Broker", new { area = "" }, new { @class = "nav-link bg-info rounded text-white", @id = "btnListBrokers" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Liste des clients", "ListCustomers", "Customer", new { area = "" }, new { @class = "nav-link bg-info rounded text-white", @id = "btnListCustomers" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid p-0  body-content">
        <div class="container-fluid pt-8 pb-5">
            @RenderBody()
        </div>
        <footer class="p-0 mt-2 fixed-bottom">
            <p class="text-white text-center mt-2 mb-2">&copy; @DateTime.Now.Year - Agenda </p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
</body>
</html>